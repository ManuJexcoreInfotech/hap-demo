<?xml version='1.0' encoding='utf-8'?>
<widget id="hu.dpal.starter" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Happenstance</name>
    <description>
        Sample PhoneGap / Cordova application built with Angular and Ionic Framework, uses RequireJS for loading scripts. Example controllers, filters, services, directives and config.
    </description>
    <author email="" href="http://dpal.hu">
        Domonkos Pal
    </author>
    <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>

  <platform name="android">
    <icon src="www/resources/android/icon/icon-36.png" density="ldpi"/>
    <icon src="www/resources/android/icon/icon-36.png" density="mdpi"/>
    <icon src="www/resources/android/icon/icon-36.png" density="hdpi"/>
    <icon src="www/resources/android/icon/icon-36.png" density="xhdpi"/>
    <icon src="www/resources/android/icon/icon-36.png" density="xxhdpi"/>
    <icon src="www/resources/android/icon/icon-36.png" density="xxxhdpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png density="land-ldpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="land-mdpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="land-hdpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="land-xhdpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="land-xxhdpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="land-xxxhdpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="port-ldpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="port-mdpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="port-hdpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="port-xhdpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="port-xxhdpi"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" density="port-xxxhdpi"/>
  </platform>
  <platform name="ios">
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch -->
    <icon src="www/resources/icon/app-icon-60.png" width="60" height="60" />
    <icon src="www/resources/icon/app-icon-120.png" width="120" height="120" />
    <icon src="www/resources/icon/app-icon-180.png" width="180" height="180" />

    <!-- iPad -->
    <icon src="www/resources/icon/app-icon-76.png" width="76" height="76" />
    <icon src="www/resources/icon/app-icon-152.png" width="152" height="152" />

    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="www/resources/icon/app-icon-40.png" width="40" height="40" />
    <icon src="www/resources/icon/app-icon-80.png" width="80" height="80" />

    <!-- iPhone / iPod Touch -->
    <icon src="www/resources/icon/app-icon-57.png" width="57" height="57" />
    <icon src="www/resources/icon/app-icon-114.png" width="114" height="114" />

    <!-- iPad -->
    <icon src="www/resources/icon/app-icon-72.png" width="72" height="72" />
    <icon src="www/resources/icon/app-icon-114.png" width="144" height="144" />

    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="www/resources/icon/app-icon-29.png" width="29" height="29" />
    <icon src="www/resources/icon/app-icon-58.png" width="58" height="58" />
    <icon src="www/resources/icon/app-icon-87.png" width="87" height="87" />

    <!-- iPad Spotlight and Settings Icon -->
    <icon src="www/resources/icon/app-icon-50.png" width="50" height="50" />
    <icon src="www/resources/icon/app-icon-100.png" width="100" height="100" />

    <splash src="www/resources/splash/splash-screen-640X1136.png" width="640" height="1136"/>
    <splash src="www/resources/splash/splash-screen-750X1334.png" width="750" height="1334"/>
    <splash src="www/resources/splash/splash-screen-1242X2208.png" width="1242" height="2208"/>
    <splash src="www/resources/splash/splash-screen-1024X768.png" width="2208" height="1242"/>
    <splash src="www/resources/splash/splash-screen-2048X1536.png" width="2048" height="1536"/>
    <splash src="www/resources/splash/splash-screen-1024X768.png" width="1024" height="768"/>
    <splash src="www/resources/splash/splash-screen-1536X2048.png" width="1536" height="2048"/>
    <splash src="www/resources/splash/splash-screen-768X1024.png" width="768" height="1024"/>
    <splash src="www/resources/splash/splash-screen-1024X768.png" width="640" height="960"/>
    <splash src="www/resources/splash/splash-screen-320X480.png" width="320" height="480"/>
  </platform>

  <preference name="AutoHideSplashScreen" value="false"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="SplashScreenDelay" value="5000" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
</widget>
